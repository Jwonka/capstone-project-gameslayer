@page
@model VideoGameGrade.Pages.GameCollectionModel
@{
    ViewData["Title"] = "Game Collection Review!";
}

<div class="text-center">
    <h1 class="display-4">Check out our Game Collection</h1>
    <p>Here we have our favorite classic games.</p>
</div>
<div class='text-center'>
    @if (ViewData["SearchMessage"] != null)
    {
        <div class='alert alert-danger fade show' role='alert'>
         <h1 class="alert-heading">@ViewData["SearchMessage"]</h1>
        </div>
    }
</div>

<h2>
    <a class="btn btn-outline-primary btn-sm" href="/Add">New Game</a>
</h2>

<table class="table">
    <thead class ="text-white">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Publisher</th>
            <th>Console</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-white">
        @foreach(var game in Model.gamesList)
        {
            <tr>
                <td>@game.gameId</td>
                <td>@game.gameTitle</td>
                <td>@game.gamePublisher</td>
                <td>@game.gameConsole</td>
                <td>@game.gameCategory</td>
                <td>@game.gameRating</td>          
                <td><img src="@game.gameImage" alt="Game Image" style="width: 100px; height: auto;" /></td>
                <td>
                    <a class="btn btn-outline-info btn-sm" href="/Trivia?id=@game.gameId">Quiz</a>
                    <a class="btn btn-outline-success btn-sm" href="/Game/Rate?id=@game.gameId">Rate</a>
                    <a class="btn btn-outline-danger btn-sm" href="/Game/Delete?id=@game.gameId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>