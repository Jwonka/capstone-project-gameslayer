@page
@model VideoGameGrade.Pages.GameCollectionModel
@{
    ViewData["Title"] = "Game Collection Review!";
}

<div class="text-center">
    <h1 class="display-4">Check out our Game Collection</h1>
    <p>Here we have our favorite classic games.</p>
</div>


<h2>
    <a class="btn btn-primary btn-sm" href="/Game/Add">New Game</a>
</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Company</th>
            <th>Publisher</th>
            <th>Description</th>
            <th>Rating</th>
            <th>Quiz</th>
            <th>Image</th>
            <th>Answer</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var game in Model.gamesList)
        {
            <tr>
                <td>@game.gameId</td>
                <td>@game.gameTitle</td>
                <td>@game.gameCompany</td>
                <td>@game.gamePublisher</td>
                <td>@game.gameDesc</td>
                <td>@game.gameRating</td>
                <td>@game.gameQuiz</td>
                <td>@game.gameImage</td>
                <td>@game.gameAnswer</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Game/Edit?id=@game.gameId">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/Game/Rate?id=@game.gameId">Rate</a>
                    <a class="btn btn-danger btn-sm" href="/Game/Delete?id=@game.gameId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
